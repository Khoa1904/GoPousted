    <Border BorderBrush="#c2c2c2" Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="3" BorderThickness="2,2,2,2" Margin="40,0,0,0" CornerRadius="2">
