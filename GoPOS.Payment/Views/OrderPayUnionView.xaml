    </StackPanel>
    <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2" Margin="0,0,0,0">
      <TextBox Text="" Style="{StaticResource txtBox}" FontStyle="Normal" FontWeight="Bold" Width="65" FontSize="14px" Height="25" Margin="0,0,0,0" />
    </StackPanel>
    <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="4" Margin="0,0,0,0">
      <TextBlock VerticalAlignment="Center" Text="{StaticResource 0399}" FontFamily="{StaticResource Pretendard}" FontSize="12" FontStyle="Normal" FontWeight="Light" Foreground="#999999" LineHeight="14" TextAlignment="Left" Margin="35,23,0,0" />
    </StackPanel>
    <!--서명start-->
    <StackPanel Orientation="Horizontal" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,0">
      <Image VerticalAlignment="Center" Width="10" Height="10" Source="pack://application:,,,/GoPOS.Resources;component/resource/images/pr.png" Margin="43,0,0,0" />
      <TextBlock VerticalAlignment="Center" Text="{StaticResource 0073}" FontFamily="{StaticResource Pretendard}" FontSize="16" FontStyle="Normal" FontWeight="Bold" Foreground="#000000" LineHeight="14" TextAlignment="Left" Margin="10,0,0,0" />
    </StackPanel>
    <StackPanel Orientation="Horizontal" Grid.Row="9" Grid.Column="4" Grid.ColumnSpan="3" Margin="0,0,0,0">
      <Button cal:Message.Attach="[Event Click] = [Action ButtonMenu($source, $eventArgs)]" Tag="btnReqSign" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="5,0,0,0" Width="71" Height="36" Padding="0,0,0,0" BorderThickness="0,0,0,0">
        <Button.Background>
          <ImageBrush ImageSource="pack://application:,,,/GoPOS.Resources;component/resource/images/btn_base_green_71x36.png" />
        </Button.Background>
        <TextBlock Text="{StaticResource 0074}" FontFamily="{StaticResource Pretendard}" FontSize="13" FontStyle="Normal" FontWeight="Bold" Foreground="#FFFFFFFF" LineHeight="13" TextAlignment="Center" />
      </Button>
    </StackPanel>
    <StackPanel Orientation="Horizontal" Grid.Row="10" Grid.Column="4" Grid.RowSpan="3" Margin="0,0,0,0">
      <Button cal:Message.Attach="[Event Click] = [Action ButtonMenu($source, $eventArgs)]" Tag="btnReqAppr" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="5,0,0,0" Width="71" Height="95" Padding="0,0,0,0" BorderThickness="0,0,0,0">
