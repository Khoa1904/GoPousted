    <StackPanel Orientation="Horizontal" Grid.Row="13" Grid.Column="1" Margin="0,0,0,0">
      <Button cal:Message.Attach="[Event Click] = [Action ButtonMenu($source, $eventArgs)]" Tag="btnRegDirect" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="42,0,0,0" Width="71" Height="36" Padding="0,0,0,0" BorderThickness="0,0,0,0">
