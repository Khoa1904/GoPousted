        <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="5" Grid.ColumnSpan="4" Margin="50,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button Tag="PrevPage" Command="{Binding ButtonCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}" 
                    HorizontalAlignment="Center" VerticalAlignment="Top" Padding="0,0,0,0"  Width="78" 
                    Height="33" Style="{StaticResource OrangeBtn}">
                <TextBlock Text="이전" FontFamily="{StaticResource Pretendard}" FontSize="13" FontStyle="Normal" FontWeight="Bold"  LineHeight="14"  />
            </Button>
