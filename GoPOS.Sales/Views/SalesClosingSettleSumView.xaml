                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <Border Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2" BorderBrush="#bababa" BorderThickness="1 0 1 1" Width="170" Background="#f5f5f5" >
            <StackPanel  Orientation="Horizontal" VerticalAlignment="Center" ></StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="4 0 0 2" >
