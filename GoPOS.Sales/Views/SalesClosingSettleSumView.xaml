                <TextBlock Text="총할인액" Margin="10 0 0 0" FontSize="14" Foreground="#4976c6" />
                <TextBlock Text="{Binding TOTAL_DIS, StringFormat={}{0:N0}}" Margin="0 0 0 0" Width="70" FontSize="14" Foreground="#4976c6" TextAlignment="Right" Padding="0 0 0 0" />
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="4 0 0 2" >
            <Image Source="pack://application:,,,/GoPOS.Resources;component/Resource/Images/pr.png" Width="10" Margin="2 0 0 0" />
            <TextBlock Text="카드사별 매출내역" Margin="8 0 0 0" FontWeight="Bold" FontSize="16" Foreground="#000000" />
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="1" HorizontalAlignment="Center" >
            <ListView Name="CardSaleList"  FontSize="13"  Padding="1" BorderBrush="#bababa" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                   ItemsSource="{Binding CR_SALE}" VerticalAlignment="Top" 
                                    Height="206" Width="250" >
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="NO" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="30">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin=" -6 -3 -6 0">
                                        <DockPanel Margin="0,0,0,0">
                                            <TextBlock Foreground="#FF000000" HorizontalAlignment="Center" Height="22"
                                              Text="{Binding  RelativeSource={RelativeSource FindAncestor, 
                                         AncestorType={x:Type ListViewItem}}, Converter={StaticResource IndexConverter}}"         />
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="매입사명" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="81">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin=" -6 -3 -6 0">
