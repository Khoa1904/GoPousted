            <RowDefinition Height="35" />
            <RowDefinition Height="40" />
            <RowDefinition Height="228" />
            <RowDefinition Height="24" />
            <RowDefinition Height="40" />
            <RowDefinition Height="206" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="90" />
            <ColumnDefinition Width="90" />
            <ColumnDefinition Width="90" />
            <ColumnDefinition Width="85" />
            <ColumnDefinition Width="105" />
            <ColumnDefinition Width="90" />
            <ColumnDefinition Width="90" />
            <ColumnDefinition Width="90" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Border Grid.Row="0" Grid.ColumnSpan="10" Background="#f5f5f5" CornerRadius="2"></Border>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" >
            <Image Source="pack://application:,,,/GoPOS.Resources;component/Resource/Images/pr2.png" Width="10" Margin="5 0 0 0" />
            <TextBlock Text="마감정산" FontWeight="Bold" FontSize="18" Foreground="#455881" Margin="5 0 0 0" />
        </StackPanel>

        <StackPanel Grid.Row="0" Margin="15 0 0 0" Grid.Column="2" Grid.ColumnSpan="4" Orientation="Horizontal" VerticalAlignment="Center" >
            <TextBox Text="{Binding InitDateTime, Mode=OneWay}" IsReadOnly="True" Background="#808080" Foreground="#ffffff" FontWeight="bold" FontSize="16" BorderBrush="#646464" 
                     Padding="10 0 10 0" Width="315" Margin="5 0 0 0" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0 0 0 2">
            <Image Source="pack://application:,,,/GoPOS.Resources;component/Resource/Images/pr.png" Width="10" Margin="2 0 0 0" />
            <TextBlock Text="마감 정산내역 Ⅰ" Margin="8 0 0 0" FontWeight="Bold" FontSize="16" Foreground="#000000" />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="1" HorizontalAlignment="Center" >
            <ListView Name="ClosingSett1"  FontSize="13"  Padding="1" BorderBrush="#bababa" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                   ItemsSource="{Binding CLOSE_DTL1}" VerticalAlignment="Top" 
                                    Height="228" Width="170" >
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="항목" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="75">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin=" -6 -3 -6 0">
                                        <DockPanel Margin="0,0,0,0">
                                            <TextBlock Foreground="#FF000000" Text="{Binding Item}"
                                                       HorizontalAlignment="Left" Height="22"/>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="금액" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin=" -6 -3 -6 0">
                                        <DockPanel Margin="0,0,0,0">
                                            <TextBlock Foreground="#FF000000" HorizontalAlignment="right" Height="22" Margin="0 0 10 0"
                                             Text="{Binding value, StringFormat={}{0:N0}}"          />
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="#bababa" BorderThickness="1 0 1 1" Width="169" Background="#f5f5f5" >
            <StackPanel  Orientation="Horizontal" VerticalAlignment="Center" >
                <TextBlock Text="순매출액" Margin="10 0 0 0" FontSize="14" Foreground="#4976c6" />
                <TextBlock Text="{Binding TOTAL_SALE1, StringFormat={}{0:N0}}" Margin="20 0 0 0" Width="70" FontSize="14" Foreground="#4976c6" TextAlignment="Right"  />
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="4 0 0 2" >
            <Image Source="pack://application:,,,/GoPOS.Resources;component/Resource/Images/pr.png" Width="10" Margin="2 0 0 0" />
            <TextBlock Text="마감 정산내역 Ⅱ" Margin="8 0 0 0" FontWeight="Bold" FontSize="16" Foreground="#000000" />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2" Grid.RowSpan="1" HorizontalAlignment="Center" >
