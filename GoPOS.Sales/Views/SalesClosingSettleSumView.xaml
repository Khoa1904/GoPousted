                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <Border Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="2" BorderBrush="#bababa" BorderThickness="1 0 1 1" Width="190" Background="#f5f5f5" >
            <StackPanel  Orientation="Horizontal" VerticalAlignment="Center" >
                <TextBlock Text="실매출액" Margin="10 0 0 0" FontSize="14" Foreground="#4976c6" />
                <TextBlock Text="{Binding TOTAL_SALE_TYPE, StringFormat={}{0:N0}}" Margin="25 0 0 0" Width="70" FontSize="14" Foreground="#4976c6" TextAlignment="Right"  />
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Grid.Column="7" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="4 0 0 2" >
            <Image Source="pack://application:,,,/GoPOS.Resources;component/Resource/Images/pr.png" Width="10" Margin="2 0 0 0" />
            <TextBlock Text="할인 매출내역" Margin="8 0 0 0" FontWeight="Bold" FontSize="16" Foreground="#000000" />
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="2" Grid.RowSpan="1" HorizontalAlignment="Center" >
