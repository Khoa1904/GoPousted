                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="금액" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="90">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin=" -6 -3 -6 0">
                                        <DockPanel Margin="0,0,0,0">
                                            <TextBlock Foreground="#FF000000" HorizontalAlignment="Right" Height="22" Margin="0 0 25 0"
