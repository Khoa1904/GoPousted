                                            <TextBlock Foreground="#FF000000" HorizontalAlignment="Center" Height="22"
                                              Text="{Binding CompanyName}"        />
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="건수" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin=" -6 -3 -6 0">
                                        <DockPanel Margin="0,0,0,0">
                                            <TextBlock Foreground="#FF000000" HorizontalAlignment="Right" Height="22" Margin="0 0 15 0"
                                             Text="{Binding SaleCount}"          />
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="금액" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="81">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin=" -6 -3 -6 0">
                                        <DockPanel Margin="0,0,0,0">
                                            <TextBlock Foreground="#FF000000" HorizontalAlignment="Right" Height="22" Margin="0 0 15 0"
                                             Text="{Binding amount, StringFormat={}{0:N0}}"          />
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
