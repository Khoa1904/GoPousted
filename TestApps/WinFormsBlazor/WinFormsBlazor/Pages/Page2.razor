@page "/page2"
@inject IJSRuntime JSRuntime

<h3>Page2</h3>

<div class="input-group">
	<button type="button" class="btn btn-success" @onclick="@(e => CalPrice(e, 1, "minus", 2500))">-</button>
	<input type="text" class="form-control" id="cnt1" name="cnt1" value="1" readonly>
	<button type="button" class="btn btn-success" @onclick="@(e => CalPrice(e, 1, "plus", 2500))">+</button>
	<span class="input-group-text" id="priceTxt1">2,500</span>
</div>
<br />

<div class="input-group">
	<button type="button" class="btn btn-success" @onclick="@(e => CalPrice(e, 2, "minus", 3000))">-</button>
	<input type="text" class="form-control" id="cnt2" name="cnt2" value="1" readonly>
	<button type="button" class="btn btn-success" @onclick="@(e => CalPrice(e, 2, "plus", 3000))">+</button>
	<span class="input-group-text" id="priceTxt2">3,000</span>
</div>
<br />
<br />





@code
{
	private async Task CalPrice(MouseEventArgs e, int num, string gubun, int price)
	{
		await JSRuntime.InvokeVoidAsync("CalPrice", num, gubun, price);
	}
}