            </views:GoButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1" Margin="0,0,0,0">
            <views:GoButton Click="KeyClicked" Focusable="False" Tag="D4" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="0,0,0,0" 
