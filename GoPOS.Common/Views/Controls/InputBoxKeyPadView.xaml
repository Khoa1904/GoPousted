                    Style="{StaticResource OrangePress}" VerticalAlignment="Top" Width="51" Height="48" Padding="0,0,0,0" BorderThickness="0,0,0,0">

                <TextBlock Text="{StaticResource 0049}" FontFamily="{StaticResource Pretendard}" FontSize="20" FontStyle="Normal" FontWeight="Bold" Foreground="#FFFFFFFF" LineHeight="14" TextAlignment="Left" />
            </views:GoButton>
            <views:GoButton Click="KeyClicked" Focusable="False" Tag="00" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="3,0,0,0"
                    Style="{StaticResource OrangePress}" VerticalAlignment="Top" Width="51" Height="48" Padding="0,0,0,0" BorderThickness="0,0,0,0">

                <TextBlock Text="{StaticResource 0050}" FontFamily="{StaticResource Pretendard}" FontSize="20" FontStyle="Normal" FontWeight="Bold" Foreground="#FFFFFFFF" LineHeight="14" TextAlignment="Left" />
            </views:GoButton>
            <views:GoButton Click="KeyClicked" Focusable="False" Tag="Clear" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="3,0,0,0"
                    Style="{StaticResource OrangePress}" VerticalAlignment="Top" Width="51" Height="48" Padding="0,0,0,0" BorderThickness="0,0,0,0">

                <TextBlock Text="{StaticResource 0051}" FontFamily="{StaticResource Pretendard}" FontSize="20" FontStyle="Normal"
                        FontWeight="Bold" Foreground="#FFFFFFFF" LineHeight="14" TextAlignment="Left" />
            </views:GoButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="11" Grid.Column="1" Margin="0,0,0,0">
            <views:GoButton Click="KeyClicked" Focusable="False" Tag="Back" BorderBrush="{x:Null}" Foreground="{x:Null}"
