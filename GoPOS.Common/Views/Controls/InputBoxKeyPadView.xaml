                    Style="{StaticResource OrangePress}" VerticalAlignment="Top" Width="51" Height="48" Padding="0,0,0,0" BorderThickness="0,0,0,0">

                <TextBlock Text="{StaticResource 0044}" FontFamily="{StaticResource Pretendard}" FontSize="20" FontStyle="Normal" FontWeight="Bold" Foreground="#FFFFFFFF" LineHeight="14" TextAlignment="Left" />
            </views:GoButton>
            <views:GoButton Click="KeyClicked" Focusable="False" Tag="D6" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="3,0,0,0" 
                    Style="{StaticResource OrangePress}" VerticalAlignment="Top" Width="51" Height="48" Padding="0,0,0,0" BorderThickness="0,0,0,0">

                <TextBlock Text="{StaticResource 0045}" FontFamily="{StaticResource Pretendard}" FontSize="20" FontStyle="Normal" FontWeight="Bold" Foreground="#FFFFFFFF" LineHeight="14" TextAlignment="Left" />
            </views:GoButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.Column="1" Margin="0,0,0,0">
            <views:GoButton Click="KeyClicked" Focusable="False" Tag="D1" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="0,0,0,0" 
                    Style="{StaticResource OrangePress}" VerticalAlignment="Top" Width="51" Height="48" Padding="0,0,0,0" BorderThickness="0,0,0,0">

                <TextBlock Text="{StaticResource 0046}" FontFamily="{StaticResource Pretendard}" FontSize="20" FontStyle="Normal" FontWeight="Bold" Foreground="#FFFFFFFF" LineHeight="14" TextAlignment="Left" />
            </views:GoButton>
            <views:GoButton Click="KeyClicked" Focusable="False" Tag="D2" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="3,0,0,0" 
                    Style="{StaticResource OrangePress}" VerticalAlignment="Top" Width="51" Height="48" Padding="0,0,0,0" BorderThickness="0,0,0,0">

                <TextBlock Text="{StaticResource 0047}" FontFamily="{StaticResource Pretendard}" FontSize="20" FontStyle="Normal" FontWeight="Bold" Foreground="#FFFFFFFF" LineHeight="14" TextAlignment="Left" />
            </views:GoButton>
