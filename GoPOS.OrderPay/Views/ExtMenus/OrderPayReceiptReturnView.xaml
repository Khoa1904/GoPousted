                                                            <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin="-7,-2,-7,-2">
                                                                <DockPanel Margin="6,2,6,2">
                                                                    <TextBlock Height="22" Text="{Binding APPR_AMT, StringFormat={}{0:#,0}}"   HorizontalAlignment="Center" Padding="0 0 0 0" />

                                                                </DockPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="승인번호" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="80">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin="-7,-2,-7,-2">
                                                                <DockPanel Margin="6,2,6,2">
                                                                    <TextBlock  HorizontalAlignment="Right" Height="22" Text="{Binding APPR_NO}"/>
                                                                </DockPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="처리상태" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="65">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin="-7,-2,-7,-2">
                                                                <DockPanel Margin="6,2,6,2">
                                                                    <TextBlock Text="{Binding APPR_PROC_FLAG_NM}"  HorizontalAlignment="Right" Height="22">

                                                                    </TextBlock>
                                                                </DockPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </Border>
                            </StackPanel>

                            <Image Source="pack://application:,,,/GoPOS.Resources;component/resource/images/pr.png" Grid.Row="6" Grid.Column="0" Height="12"
                                   HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0 0 0 4"/>
                            <TextBlock Text="서명" FontSize="14" FontWeight="Bold" Grid.Column="0" Grid.Row="6" Margin="18 5 0 0"/>
                            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="3" Grid.RowSpan="6" Margin="0,0,0,0"  VerticalAlignment="Top">
                                <Border CornerRadius="3" BorderThickness="1" BorderBrush="#b4b4b4" Margin="0,0,0,0" Padding="0,0,0,0">
