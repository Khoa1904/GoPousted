                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="2"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <TextBlock Grid.Column="2" Text="* 카드번호 :" VerticalAlignment="Center" HorizontalAlignment="Left"
