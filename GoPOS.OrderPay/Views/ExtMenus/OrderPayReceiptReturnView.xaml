                                                        <Setter Property="Foreground" Value="#fff"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.View>
                                            <GridView >
                                                <GridViewColumn Header="No" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="30"
                                                                  DisplayMemberBinding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}},Converter={StaticResource IndexConverter}}">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin="-7,-2,-7,-2">
                                                                <DockPanel Margin="6,2,6,2" >
                                                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Height="22">
                                                                    </TextBlock>
                                                                </DockPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="결제구분" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="80">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin="-7,-2,-7,-2">
                                                                <StackPanel Margin="6,2,6,2" Orientation="Horizontal">
                                                                    <TextBlock FontFamily="Wingdings 3" VerticalAlignment="Center" Text=""></TextBlock>
                                                                    <TextBlock  x:Name="txtINSERT_DT" FontWeight="Normal" HorizontalAlignment="Center" 
                                                                       Height="22" Margin="3,0,0,0" Text="{Binding PAY_TYPE_NAME}">
                                                                    </TextBlock>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="카드/인식번호" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="120">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin="-7,-2,-7,-2">
                                                                <DockPanel Margin="6,2,6,2">
                                                                    <TextBlock Height="22" Text="{Binding APPR_IDT_NO}"  HorizontalAlignment="Center" >
                                                                    </TextBlock>
                                                                </DockPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="승인금액" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="65">
                                                    <GridViewColumn.CellTemplate>
