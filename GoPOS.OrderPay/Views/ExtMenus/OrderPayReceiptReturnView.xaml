                            <TextBox Style="{StaticResource GrayTB}" Text="{Binding HANDLE_AFF_CARD_NO}" Grid.Row="7" Grid.Column="5" Grid.ColumnSpan="2">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="2"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <TextBlock Grid.Row="8" Grid.Column="4" FontSize="14" FontWeight="Bold" Text="* 임의등록 :" VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource GrayTB}" Text="{Binding HANDLE_TEMP_NO, Mode=TwoWay}" Grid.Row="8" Grid.Column="5" Grid.ColumnSpan="2">
