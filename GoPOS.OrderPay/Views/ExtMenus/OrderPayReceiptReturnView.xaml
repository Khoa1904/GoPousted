                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="2"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <TextBlock Grid.Row="9" Grid.Column="4" FontSize="14" FontWeight="Bold" Text="* 쿠폰번호 :" VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource GrayTB}" Text="{Binding HANDLE_CPN_NO}" Grid.Row="9" Grid.Column="5" Grid.ColumnSpan="2">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="2"/>
                                    </Style>
                                </TextBox.Resources>
