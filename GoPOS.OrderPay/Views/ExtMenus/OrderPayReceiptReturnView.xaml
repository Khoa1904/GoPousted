                                                                    <TextBlock Height="22" Text="{Binding APPR_AMT, StringFormat={}{0:#,0}}"   HorizontalAlignment="Center" Padding="0 0 0 0" />

                                                                </DockPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="취소요건" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="80">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin="-7,-2,-7,-2">
