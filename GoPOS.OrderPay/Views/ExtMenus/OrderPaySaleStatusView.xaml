                            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" Margin="0,65,0,0" VerticalAlignment="Top">
                                <Image VerticalAlignment="Center" Width="14" Height="14" Source="pack://application:,,,/GoPOS.Resources;component/resource/images/pr3.png" Margin="0,0,0,0" />
                                <TextBlock VerticalAlignment="Center" Text="{StaticResource 0359}" FontFamily="{StaticResource Pretendard}" FontSize="18" FontStyle="Normal" FontWeight="Bold" Foreground="#FF8A3883" LineHeight="14" TextAlignment="Left" Margin="10,2,0,0" />
                                <TextBlock VerticalAlignment="Center" Text="{StaticResource 0356}" FontFamily="{StaticResource Pretendard}" FontSize="16" FontStyle="Normal" FontWeight="Bold" Foreground="#FF8A3883" LineHeight="14" TextAlignment="Left" Margin="3,2,0,0" />
                                <CheckBox Style="{StaticResource CheckboxStyle}"  FontFamily="{StaticResource Pretendard}" FontSize="16" FontStyle="Normal" FontWeight="Bold" Foreground="#FF000000" VerticalAlignment="Center" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" Margin="20,0,0,0"
                                       x:Name="Stats_all" Checked="Radiotic_Checkbox2" Unchecked="NotNull_Checkbox2" Command="{Binding CheckboxCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}" >
                                    <TextBlock VerticalAlignment="Center" Text="{StaticResource 0186}" FontFamily="{StaticResource Pretendard}" FontSize="16" FontStyle="Normal" FontWeight="Bold" Foreground="#000000" LineHeight="14" TextAlignment="Left" Margin="5,0,0,0" />
                                </CheckBox>
                                <CheckBox Style="{StaticResource CheckboxStyle}"  FontFamily="{StaticResource Pretendard}" FontSize="16" FontStyle="Normal" FontWeight="Bold" Foreground="#FF000000" Margin="5,0,0,0" VerticalAlignment="Center" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left"
                                       x:Name="Stats_process" Checked="Radiotic_Checkbox2" Unchecked="NotNull_Checkbox2" Command="{Binding CheckboxCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}" >
                                    <TextBlock VerticalAlignment="Center" Text="{StaticResource 0360}" FontFamily="{StaticResource Pretendard}" FontSize="16" FontStyle="Normal" FontWeight="Bold" Foreground="#000000" LineHeight="14" TextAlignment="Left" Margin="5,0,0,0" />
                                </CheckBox>
                                <CheckBox Style="{StaticResource CheckboxStyle}" FontFamily="{StaticResource Pretendard}" FontSize="16" FontStyle="Normal" FontWeight="Bold" Foreground="#FF000000" Margin="5,0,0,0"
