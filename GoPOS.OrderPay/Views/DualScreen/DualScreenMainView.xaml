<UserControl  xmlns:views="clr-namespace:GoPOS.Common.Views;assembly=GoPOS.Common"
              x:Class="GoPOS.Views.DualScreenMainView"
              xmlns:controls="clr-namespace:GoPOS.Common.Helpers.Controls;assembly=GoPOS.Common"                    
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoPOS.Views"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:viewModel="clr-namespace:GoPOS.ViewModels" 
        mc:Ignorable="d" d:DataContext="{d:DesignInstance viewModel:DualScreenMainViewModel}" 
        BorderThickness="0.1" 
              Width="{Binding MainWidth}" Height="{Binding MainHeight}"
              d:DesignWidth="1024" d:DesignHeight="768">

    <Grid controls:EnableDragHelper.EnableDrag="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="0" x:Name="DockPanelMain" Margin="0,0,0,0" Width="Auto" Height="Auto">
            <ContentControl x:Name="ActiveItem" />
        </DockPanel>
    </Grid>
</UserControl>
