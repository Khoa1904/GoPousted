            <ListView Name="nosaleList"  FontSize="13"  Padding="1" BorderBrush="#bababa" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                   ItemsSource="{Binding NO_SALE}" VerticalAlignment="Top" 
                                    Height="200" Width="220" >
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="No" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="30">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin=" -9 -6 -6 0">
                                        <DockPanel Margin="3,3,0,0">
                                            <TextBlock Text="{Binding  RelativeSource={RelativeSource FindAncestor, 
                                         AncestorType={x:Type ListViewItem}}, Converter={StaticResource IndexConverter}}"
                                                Foreground="#FF000000" HorizontalAlignment="Left" Height="22" Padding="0 1 0 0">
                                            </TextBlock>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="항목" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin=" -6 -3 -6 0">
                                        <DockPanel Margin="1,0,0,0">
                                            <TextBlock Foreground="#FF000000" HorizontalAlignment="Left" Height="22"
                                              Text="{Binding Item}" Padding="0 1 0 0"        />
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="금액" HeaderContainerStyle="{StaticResource listViewHeaderStyle}" Width="83">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#bababa" BorderThickness="0,0,1,1" Margin=" -6 -3 -6 0">
                                        <DockPanel Margin="0,0,0,0">
                                            <TextBlock Foreground="#FF000000" HorizontalAlignment="Right" Height="22" Margin="0 0 12 0"
                                              Text="{Binding value, StringFormat={}{0:N0}}"         />
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>


        <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.Column="5" Grid.ColumnSpan="4" Margin="0,0,15,0" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Button Tag="PrevPage" Command="{Binding ButtonCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}" 
                    HorizontalAlignment="Center" VerticalAlignment="Top" Padding="0,0,0,0"  Width="78" 
                    Height="33" Style="{StaticResource OrangeBtn}">
                <TextBlock Text="이전" FontFamily="{StaticResource Pretendard}" FontSize="13" FontStyle="Normal" FontWeight="Bold"  LineHeight="14"  />
            </Button>

        </StackPanel>
    </Grid>
</views:UCViewBase>