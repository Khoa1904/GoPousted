<Window x:Class="GoPOS.Views.ShellView" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:viewModel="clr-namespace:GoPOS.ViewModels" 
        xmlns:c="clr-namespace:GoPOS.Common.Views;assembly=GoPOS.Common" 
        mc:Ignorable="d" d:DataContext="{d:DesignInstance viewModel:ShellViewModel}" 
        Title="OllStarPOS" WindowState="Normal" ResizeMode="NoResize" BorderThickness="0.1" Width="1024" Height="768" WindowStyle="None">
  <!-- 
    
    TODO: 개발시에 프로그램 실행하면 VS 코드 덮어서 주석처리함 : AllowsTransparency="True"
    
        배포시 변경
        Width="1024" Height="768" WindowStyle="None" // Topmost="True" 주석처리함 링크 페이지 위해서
        개발시 변경
        Width="1036" Height="807.5" d:DesignWidth="1024" d:DesignHeight="768"
    -->
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <DockPanel Grid.Row="0" Grid.Column="0" x:Name="DockPanelMain" Margin="0,0,0,0" Width="1024" Height="768">
      <ContentControl x:Name="ActiveItem" Width="1024" Height="768" />
    </DockPanel>
  </Grid>
</Window>